# Application
NODE_ENV=development
APP_NAME=soPres
APP_URL=http://localhost:3000
ADMIN_URL=http://localhost:5173

# Server
API_PORT=3000
API_HOST=0.0.0.0

# Database
# Database
# SQLite (Default for Development)
DATABASE_URL="file:./dev.db"

# PostgreSQL (Production Option)
# DATABASE_URL=postgresql://user:password@localhost:5432/sopres
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage/media/uploads
STORAGE_MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Email
# Configure your email service for password reset and notifications
# For development: Use Mailtrap (https://mailtrap.io) for testing emails
# For production: Use your SMTP provider (Gmail, SendGrid, Mailgun, etc.)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_FROM=noreply@sopres.com
MAIL_FROM_NAME=soPres

# Build Engine
BUILD_OUTPUT_DIR=./dist
BUILD_CACHE_DIR=./storage/cache
BUILD_PARALLEL_JOBS=4

# Image Processing
IMAGE_QUALITY_WEBP=80
IMAGE_QUALITY_AVIF=75
IMAGE_QUALITY_JPEG=85
IMAGE_MAX_WIDTH=2400
IMAGE_MAX_HEIGHT=2400

# Analytics (optional)
ANALYTICS_ENABLED=false
ANALYTICS_TRACKING_ID=

# Logging
LOG_LEVEL=info
LOG_FILE=./storage/logs/app.log
LOG_MAX_FILES=14
LOG_MAX_SIZE=10m

# Development
DEV_MODE=true
DEBUG=sopres:*

# Gitea Integration
GITEA_URL=http://your-gitea-server:3000
GITEA_TOKEN=your-gitea-personal-access-token
GITEA_OWNER=your-username
GITEA_REPO=your-repo
